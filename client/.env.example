# ============================================================================
# Next.js Frontend Configuration
# ============================================================================
# Copy this file to .env.local and fill in your values
# Or run ./setup-env.sh for guided setup
# ============================================================================

# Discord Embedded App Configuration
NEXT_PUBLIC_DISCORD_CLIENT_ID=your_client_id_here

# API Endpoint
# Development: http://localhost:3008
# Production: https://your-domain.com or leave empty for relative path
NEXT_PUBLIC_API_URL=http://localhost:3008

# Development Mode
# Set to true for local testing without Discord Embedded App
# Set to false for production or testing Discord integration
NEXT_PUBLIC_ENABLE_DEV_MODE=false

# Development Mode Test IDs (only used when ENABLE_DEV_MODE=true)
NEXT_PUBLIC_DEV_GUILD_ID=
NEXT_PUBLIC_DEV_USER_ID=

# Environment Mode
NODE_ENV=development
